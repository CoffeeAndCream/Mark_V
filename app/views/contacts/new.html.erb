<head>
  <%= stylesheet_link_tag "/assets/stylsheets/custom.css.scss" %>
  <%= stylesheet_link_tag "/assets/stylsheets/application.css" %>
  <link href="https://fonts.googleapis.com/css?family=Space+Mono" rel="stylesheet">
</head>
<header>
  <div class="nav">
    <ul>
      <li class="home"><a href="home">Home</a></li>
      <li class="about"><a href="about">About</a></li>
      <li class="news"><a href="newsletter">Newsletter</a></li>
      <li class="contact"><a href="contact">Contact</a></li>
    </ul>
  </div>
</header>
<div align="center">
  <p style="font-size: 36">Contact Me </p>
  <p>Currently, I'm available for interviews</p>
  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :message, :as => :text, :required => true %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Send', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>
